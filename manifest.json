{
    "manifest_version": 3,
    "name": "ChatGPT-Personality-Selector",
    "description": "This extention contains a precrafted chat gpt profiles that you can load to boost your chatgpt experience enhanced with the experience of multiple prompt engeneering tricks.",
    "version": "1.0",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
    "host_permissions": [
        "https://ddg-webapp-aagd.vercel.app/*"
    ],
    "background": {
        "service_worker": "background.js"
    },      
    "content_scripts": [
    {
        "matches": [
            "https://chat.openai.com/*"
        ],
        "css": ["style.css"],
        "js": ["papaparse.min.js","content.js"]
    }
    ],
    "permissions": [
        "storage",
        "activeTab"
    ],
    
    "web_accessible_resources": [
        {
          "resources": [
            "prompts_en.csv",
            "prompts_fr.csv"
          ],
          "matches": [
            "https://chat.openai.com/*"
          ]
        }
      ]    
}